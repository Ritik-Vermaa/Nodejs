<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <Style>
        body{
            font-family: Arial, Helvetica, sans-serif;
            font-weight: 900;
        }
    </Style>
</head>
<body>
    <h1>URL Shortener</h1>
    <% if (locals.id) { %>
        <p>URL Generated : http://localhost/url/<%= locals.id %></p>
    <% } %>
    
    <div>
        <form method="post" action="/url">
            <label >Enter Your Original URL</label>
            <input type="text"
             name="url"
              placeholder="https://google.com"
              >
              <button type="submit">Generate </button>
        </form>
    </div>
    <div>
        <% if (locals.urls) { %>
            <table>
                <thead>
                    <th>S. NO</th>
                    <th>ShortID</th>
                    <th>Redirect</th>
                    <th>Clicks</th>
                </thead>
                <tbody>
                    <% locals.urls.forEach((url, index) => { %>
                        <tr> <!-- Add this line to create a new row for each URL -->
                            <td><%= index + 1 %></td>
                            <td><%= url.shortId %></td>
                            <td><%= url.redirectURL %></td>
                            <td><%= url.visitHistory.length %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
        
    </div>
</body>
</html>